<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilesettings.PasswordFragment">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="233dp"
        android:layout_height="96dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="46dp"
        android:gravity="center"
        android:text="Change Password"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/oldPasswordText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/oldPasswordText"
        android:background="@drawable/custom_input"
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/customlock_icon"
        android:drawablePadding="10dp"
        android:paddingStart="10dp"
        android:ems="10"
        android:hint="Enter Old Password"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="textPersonName"
        android:password="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/newPasswordText"
        android:background="@drawable/custom_input"
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/customopenlock_icon"
        android:drawablePadding="10dp"
        android:paddingStart="10dp"
        android:ems="10"
        android:hint="Enter New Password"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="textPersonName"
        android:password="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oldPasswordText" />

    <EditText
        android:id="@+id/againPasswordText"
        android:background="@drawable/custom_input"
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/customopenlock_icon"
        android:drawablePadding="10dp"
        android:paddingStart="10dp"
        android:ems="10"
        android:hint="Enter New Again"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="textPersonName"
        android:password="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPasswordText" />

    <Button
        android:id="@+id/changePasswordBotton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:onClick="changePassword"
        android:text="Change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/againPasswordText" />
</androidx.constraintlayout.widget.ConstraintLayout>