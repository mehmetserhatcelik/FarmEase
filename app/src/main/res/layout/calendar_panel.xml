<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="450dp"
    android:background="@drawable/round_calendar">

    <Button
        android:id="@+id/exit1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/exit_but" />
    <FrameLayout
        android:layout_width="200dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="75dp"
        android:layout_height="250dp"
        android:background="@drawable/rounded_cornerwhite">

        <ImageView
            android:id="@+id/eventImage"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <EditText
            android:id="@+id/Event"
            android:layout_marginStart="20dp"
            android:layout_marginTop="160dp"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:background="@drawable/buttheme"
            android:textColor="@color/white"
            android:fontFamily="@font/oxa"
            android:textSize="20sp"
            android:text=""
            android:textAlignment="center"
            android:padding="20dp"/>

    </FrameLayout>

    <Button
        android:id="@+id/removeCalendar"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="375dp"
        android:background="@drawable/buttheme"
        android:fontFamily="@font/oxa"
        android:text="Remove"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/editCalendar"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="375dp"
        android:background="@drawable/buttheme"
        android:fontFamily="@font/oxa"
        android:onClick="addEvent"
        android:text="Change"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <Switch
        android:layout_marginStart="50dp"
        android:layout_marginTop="330dp"
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Editing" />


</RelativeLayout>