<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilesettings.EmailFragment">


    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/buttheme"
        app:layout_constraintBottom_toTopOf="@+id/changeEmailButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="205dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_marginStart="40dp"
            android:text="Change E-mail"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/passwordEmailText"
            android:layout_width="230dp"
            android:layout_height="55dp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/customlock_icon"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Enter password"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:password="true"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/newEmailText"
            android:layout_width="230dp"
            android:layout_height="55dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/customemail_icon"
            android:drawablePadding="10dp"
            android:ems="10"
            android:layout_marginStart="40dp"
            android:hint="Enter new email"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordEmailText" />

        <EditText
            android:id="@+id/againEmailText"
            android:layout_width="230dp"
            android:layout_height="55dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/customemail_icon"
            android:drawablePadding="10dp"
            android:ems="10"
            android:layout_marginStart="40dp"
            android:hint="Enter email again"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newEmailText" />
    </FrameLayout>

    <Button
        android:id="@+id/changeEmailButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="323dp"
        android:background="@drawable/buttheme"
        android:onClick="changeEmail"
        android:text="Change"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout4" />

</androidx.constraintlayout.widget.ConstraintLayout>